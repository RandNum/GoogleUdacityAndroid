<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdfeaf1">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="26dp"
        android:textColor="#ff241c4a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btnSpotify"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        style="@style/mainButtons"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btnScores"
        android:layout_below="@+id/btnSpotify"
        android:layout_alignLeft="@+id/btnSpotify"
        android:layout_alignStart="@+id/btnSpotify"
        android:layout_alignRight="@+id/btnSpotify"
        android:layout_alignEnd="@+id/btnSpotify"
        style="@style/mainButtons"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btnLibrary"
        android:layout_below="@+id/btnScores"
        android:layout_alignLeft="@+id/btnScores"
        android:layout_alignStart="@+id/btnScores"
        android:layout_alignRight="@+id/btnScores"
        android:layout_alignEnd="@+id/btnScores"
        style="@style/mainButtons"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBigger"
        android:layout_below="@+id/btnLibrary"
        android:layout_alignLeft="@+id/btnLibrary"
        android:layout_alignStart="@+id/btnLibrary"
        android:layout_alignRight="@+id/btnScores"
        android:layout_alignEnd="@+id/btnScores"
        style="@style/mainButtons"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btnReader"
        android:layout_below="@+id/btnBigger"
        android:layout_alignLeft="@+id/btnBigger"
        android:layout_alignStart="@+id/btnBigger"
        android:layout_alignRight="@+id/btnBigger"
        android:layout_alignEnd="@+id/btnBigger"
        style="@style/mainButtons"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/btnCapstone"
        android:layout_below="@+id/btnReader"
        android:layout_alignLeft="@+id/btnReader"
        android:layout_alignStart="@+id/btnReader"
        android:layout_alignRight="@+id/btnReader"
        android:layout_alignEnd="@+id/btnReader"

        style="@style/mainButtons"
        android:background="#ffff3d63" />

</RelativeLayout>
